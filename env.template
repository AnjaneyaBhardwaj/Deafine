# ElevenLabs API Key (REQUIRED)
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# OpenRouter API Key (OPTIONAL - for AI-powered summaries at end of session)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model (OPTIONAL - defaults to mistral-small free model)
# See all models at: https://openrouter.ai/models
OPENROUTER_MODEL=mistralai/mistral-small-3.2-24b-instruct:free

# Audio Settings
DEAFINE_CHUNK_MS=320
DEAFINE_HOP_MS=160

# Voice Activity Detection (optional - only if webrtcvad installed)
# Set to false to disable VAD and send all audio
DEAFINE_USE_VAD=true
# VAD aggressiveness: 0 (least) to 3 (most aggressive at filtering silence)
DEAFINE_VAD_AGGRESSIVENESS=2

# ElevenLabs Settings
DEAFINE_ELEVENLABS_CHUNK_SECS=5

# Voice Isolation (removes background noise before transcription)
# Set to false to disable and send raw audio
DEAFINE_USE_VOICE_ISOLATION=true
